#client host
server {
    listen 443 ssl;
    listen [::]:443 ssl;

    server_name ennuicastr.com;

    include snippets/ssl.conf;
    ssl_certificate /etc/letsencrypt/live/ennuicastr.com/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/ennuicastr.com/privkey.pem;
    access_log /var/log/nginx/ennuicastr.com-access.log combined;
    error_log /var/log/nginx/ennuicastr.com-error.log;

    index index.jss index.html;

    add_header 'Cross-Origin-Opener-Policy' 'same-origin' always;
#    add_header 'Cross-Origin-Embedder-Policy' 'require-corp' always;
    add_header 'Service-Worker-Allowed' '/download-stream-service-worker/' always;


    ## Security section from https://securityheaders.com/
    add_header 'X-Frame-Options' "ALLOW-FROM https://accounts.google.com:*" always;
    add_header 'X-Content-Type-Options' "nosniff" always;
    add_header 'Referrer-Policy' 'origin' always;
    add_header 'Permissions-Policy' 'geolocation=(), microphone=(self "https://ennuicastr.com")' always;
    add_header 'Content-Security-Policy' 
		"default-src 'self' ; script-src 'self' data: 'unsafe-inline' 'unsafe-eval' https://www.paypalobjects.com:* https://www.paypal.com:* ; script-src-elem 'self' data: 'unsafe-inline' 'unsafe-eval' https://accounts.google.com:* https://www.paypal.com:* ; style-src 'self' data: 'unsafe-inline' https://fonts.googleapis.com:* https://accounts.google.com:* ; img-src 'self' data: https://www.paypalobjects.com:* https://px.ads.linkedin.com:* https://www.facebook.com:* https://googleads.g.doubleclick.net:* ; font-src 'self' data: https://fonts.googleapis.com:* https://fonts.gstatic.com:* https://www.paypalobjects.com:* ; connect-src 'self' data: https://jitsi.ennuicastr.com:* wss://jitsi.ennuicastr.com:* wss://ennuicastr.com:* https://accounts.google.com:*  https://www.paypal.com:* https://www.sandbox.paypal.com:* ; media-src 'self' ; object-src 'self' ; child-src 'self' ; frame-src 'self' data: https://accounts.google.com:* https://www.paypal.com:* https://www.sandbox.paypal.com:* ; worker-src 'self' ; form-action 'self' ; frame-ancestors 'self' ; upgrade-insecure-requests; block-all-mixed-content; base-uri https://ennuicastr.com:*; manifest-src 'self' 'self' 'self';"
		always;

    location ~ /ws$ {
        proxy_pass https://localhost:8443;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "Upgrade";
        proxy_set_header Host $host;

        proxy_read_timeout 86400;
        proxy_send_timeout 86400;
        send_timeout 86400;
    }

    location / {
        proxy_pass http://localhost:8000;
        proxy_set_header X-Forwarded-For $remote_addr;
        proxy_set_header Host $http_host;
    }
}

